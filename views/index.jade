extends layout

block content
    h1= title
    h3 Welcome to GCI 2018!
    br

    // Wrapper
    #wrapper

        // USER INFO
        #userInfo
            h2 User Info
            p
                strong Name:
                |  <span id='userInfoName'></span>
                br
                strong Username:
                |  <span id='userInfoUsername'></span>
                br
                strong Cohort:
                |  <span id='userInfoCohort'></span>
                br
                strong Country:
                |  <span id='userInfoCountry'></span>
        // /USER INFO

        // USER LIST
        h2 User List
        #userList
            table
                thead
                    th UserName
                    th Full Name
                    th Cohort
                    th Delete?
                tbody
        // /USER LIST
        // ADD USER
        h2 Add User
        #addUser
            fieldset
                input#inputUserFirstname(type='text', placeholder='First Name')
                br
                input#inputUserLastname(type='text', placeholder='Last Name')
                br
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserCountry(type='text', placeholder='Country')
                br
                input#inputUserCohort(type='text', placeholder='Cohort')
                br
                br
                button#btnAddUser Add User
        // /ADD USER
    // /WRAPPER
